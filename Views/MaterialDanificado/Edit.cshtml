@model Paiol_EIBC.Models.MaterialDanificado
@{
    Layout = "_Layout";
    
}



<div class="container">
    <div class="row">
       <div class="col-md-4">

       </div>
       <div class="col-md-4">
           <div class="card">
               <div class="card-header">
                    <h4>Editar Material Danificado</h4>
               </div>
               <div class="card-body">
                    <form asp-controller="MaterialDanificado" asp-action="Edit" method="post">
                        <div class="row">
                            <label class="label-form">Material</label>
                            <input type="text" name="material" id="material_danificado" class="form-control" value="@Html.DisplayFor(model => model.material)" />
                        </div>

                        <div class="row">
                            <label class="label-form">Quantidade</label>
                            @Html.EditorFor(model => model.qtd, new{htmlAttributes = new{@class="form-control"}})
                        </div>

                        <div class="row">
                            <label class="form-label">Observação</label>
                            <input type="text" , name="observacao" id="observacao" class="form-control" value="@Html.DisplayFor(model => model.observacao)" />
                        </div>

                        <div class="row">
                            <input type="submit" class="btn btn-lg btn-block btn-success" value="EDITAR" style="    width: 100%;
    margin-bottom: 3px;
    margin-top: 10px;" />
                        </div>



                    </form>
               </div>
           </div>

       </div>
       <div class="col-md-4">

       </div>
    </div>
</div>