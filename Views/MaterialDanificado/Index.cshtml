@model IEnumerable<Paiol_EIBC.Models.MaterialDanificado>
@{
    Layout = "_Layout";
   
}

@*<a asp-controller="MaterialDanificado" asp-action="Create" class="btn btn-lg btn-block btn-success"> Create New</a>*@
<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered" id="myTable">
            <thead class="header-table">
                <tr>
                    <th>MATERIAL</th>
                    <th>QUANTIDADE</th>
                    <th>OBSERVAÇÃO</th>
                    <th>OPÇÕES

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.material)</td>
                        <td>@Html.DisplayFor(modelItem => item.qtd)</td>
                        <td>@Html.DisplayFor(modelItem => item.observacao)</td>
                        <td>
                            <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.id"><i class="fa-solid fa-file-pen"></i></a>|
                            <a class="btn btn-warning " asp-action="Details" asp-route-id="@item.id"><i class="fa-solid fa-square-info"></i></a>|
                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>

                }

            </tbody>

    </div>
</div>


</table>
@section Scripts{
    <script type="text/javascript">
        let table = new DataTable('#myTable');
    </script>

    @if (TempData["MaterialDanificadoCreate"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Material Danificado Cadastrado Com Sucesso!',
                toast: true,
                timer: 2000
            })
        </script>
    }

    @if (TempData["ErrorMaterialDanificado"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                grow: 'row',
                title: 'Error ao Cadastrar Material Danificado!',
                toast: true,
                timer: 2000
            })
        </script>
    }

    @if (TempData["MaterialDanificadoEdit"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Material Danificado Editado Com Sucesso!',
                toast: true,
                timer: 2000
            })
        </script>
    }

    @if (TempData["ErrorEditMaterialDanificado"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                grow: 'row',
                title: 'Error ao Cadastrar Material Danificado!',
                toast: true,
                timer: 2000
            })
        </script>
    }
    @if (TempData["MaterialDanificadoDelete"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Material Danificado Excluido com Sucesso!!',
                toast: true,
                timer: 2000
            })
        </script>
        
    }

    @if (TempData["MaterialDanificadoDeleteError"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                grow: 'row',
                title: 'Error ao Excluir Material Danificado!',
                toast: true,
                timer: 2000
            })
        </script>

    }

}
