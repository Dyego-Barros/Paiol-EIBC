@model IEnumerable<Paiol_EIBC.Models.Material>

    @{
        Layout= "_Layout";
    }


   
 
   @* <a asp-action="Create" class="btn btn-lg btn-block btn-success">Create New</a>*@



<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered" id="myTable">
            <thead class="header-table">
                <tr>
                    <th>MATERIAL</th>
                    <th>QUANTIDADE

                    </th>
                    <th>OPÇÕES</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        <td>@Html.DisplayFor(modelItem => item.nome_material)</td>
                        <td>@Html.DisplayFor(modelItem => item.quantidade)</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id"><i class="fa-solid fa-file-pen"></i></a>|
                            <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.id"><i class="fa-solid fa-square-info"></i></a>|
                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        let table = new DataTable('#myTable');
    </script>


    @if(TempData["CreateMaterial"] != null){

    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            grow: 'row',
            title: 'Material Cadastrado Com Sucesso!',
            toast:true,
            timer: 2000
        })
    </script>


  

}

@if(TempData["ErrorMaterial"]!= null){
  
    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'error',
            title: 'Erro ao Cadastrar Material!',           
            toast: true,
            timer: 2000
        })
    </script>

}


@if(TempData["EditMaterial"]!= null){
  
    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Material Editado com Sucesso!',
            toast: true,
            timer: 2000
        })
    </script>

}


@if(TempData["EditMaterialError"]!=null){
 
    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'error',
            title: 'Erro ao Editar Material!',
            toast: true,
            timer: 2000
        })
    </script>

}


@if( TempData["DeleteMaterial"] != null){
  
    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Material Deletado com Sucesso!',
            toast: true,
            timer: 2000
        })
    </script>


}

@if ( TempData["ErrorDeleteMaterial"]!=null)
{
   
    <script type="text/javascript">
        Swal.fire({
            position: 'top-end',
            icon: 'error',
            title: 'Erro ao Deletar Material!',
            toast: true,
            timer: 2000
        })
    </script>

}

}