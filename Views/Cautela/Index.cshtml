@model IEnumerable<Paiol_EIBC.Models.Cautela>

@{
    ViewData["Title"] = "Index";
}




@*    <a asp-action="Create" class="btn btn-lg btn-block btn-success">Create New</a>*@


<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered" id="myTable">
            <thead class="header-table">
                <tr>
                    <th>
                       ANO
                    </th>

                    <th>
                       MISSAO
                    </th>

                    <th>
                       MILITAR
                    </th>

                    <th>
                        DATA
                    </th>

                    <th>OPÇÕES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ano.Date.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.missao)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.militar_recebedor)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.data_saida.Date)
                        </td>

                        <td>
                            <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.id"><i class="fa-solid fa-file-pen"></i></a>|
                            <a class="btn btn-warning " asp-action="Details" asp-route-id="@item.id"><i class="fa-solid fa-square-info"></i></a>|
                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.id"><i class="fa-solid fa-trash"></i></a>|
                            <a class="btn bg-light " asp-action="PDF" asp-route-id="@item.id"><i class="fa-solid fa-file-pdf"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        let table = new DataTable('#myTable');
    </script>

    @if (TempData["CreateCautela"] != null)
    {
   <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                toast: true,
                title: 'Cautela Criada com Sucesso!'
                grow: 'row',
                timer: 2000,
                
            })
   </script>
    }

    @if (TempData["ErrorCreateCautela"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                toast: true,
                icon: 'error',
                grow: 'row',
                timer: 2000,
                title: 'Error ao Cadastrar Cautela!'
            })
        </script>
    }

    @if (TempData["EditCautela"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                toast: true,
                icon: 'success',
                grow: 'row',
                timer: 2000,
                title: 'Cautela Editada com Sucesso!'
            })
        </script>
    }

    @if (TempData["ErrorEditCautela"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                toast: true,
                icon: 'error',
                grow: 'row',
                timer: 2000,
                title: 'Error ao Editar Cautela!'
            })
        </script>
    }


    @if (TempData["DeleteCautela"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                toast: true,
                icon: 'sucess',
                grow: 'row',
                timer: 2000,
                title: 'Cautela Excluida com Sucesso!'
            })
        </script>
    }

    @if (TempData["ErrorDeleteCautela"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                toast: true,             
                grow: 'row',
                timer: 2000,
                title: 'Error ao Deletar Cautela!'
            })
        </script>
    }
}