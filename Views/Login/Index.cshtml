@model IEnumerable<Paiol_EIBC.Models.Login>

@{
    ViewData["Title"] = "Index";
}


  @*  <a asp-action="Create" class="btn btn-lg btn-block btn-success">Create New</a>*@




<div class="container">
    <div class="row">
        <table class="table table-striped" id="myTable">
            <thead class="header-table">
                >
                <tr>
                    <th>
                       POSTO / GRADUAÇÂO
                    </th>
                    <th>
                       NIP
                    </th>
                    <th>
                       NOME DE GUERRA
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.posto_graduacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome_guerra)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id"><i class="fa-solid fa-file-pen"></i></a>|
                            <a class="btn btn-warning " asp-action="Details" asp-route-id="@item.id"><i class="fa-solid fa-square-info"></i></a>|
                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        let table = new DataTable('#myTable');
    </script>


    @if (TempData["EditSuccess"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Usuário Editado Com Sucesso!',
                toast: true,
                timer: 2000
            })
        </script>
    }
    @if (TempData["DeleteUser"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Usuário Deletado Com Sucesso!',
                toast: true,
                timer: 2000
            })
        </script>
    }
    @if (TempData["CreateUser"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                grow: 'row',
                title: 'Usuário Cadastrado Com Sucesso!',
                toast: true,
                timer: 2000
            })
        </script>

    }
    
                }